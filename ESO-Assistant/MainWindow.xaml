<Controls:MetroWindow
    x:Class="ESO_Assistant.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CircularGauge="clr-namespace:CircularGauge;assembly=CircularGauge"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:common="clr-namespace:WPF.Common"
    xmlns:gif="http://wpfanimatedgif.codeplex.com"
    xmlns:self="clr-namespace:ESO_Assistant.Classes"
    Title="ESO-A − version 5.0"
    Width="Auto"
    Height="Auto"
    MinWidth="472"
    MinHeight="0"
    VerticalAlignment="Top"
    VerticalContentAlignment="Top"
    BorderBrush="{DynamicResource AccentColorBrush}"
    BorderThickness="2"
    Closed="mainWindow_Closed"
    Closing="MetroWindow_Closing"
    ContentRendered="MetroWindow_ContentRendered"
    IsMaxRestoreButtonEnabled="False"
    Loaded="MetroWindow_Loaded"
    ResizeMode="CanMinimize"
    ShowIconOnTitleBar="False"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen">
    <Controls:MetroWindow.Resources>
        <Style x:Key="ImageStyle" TargetType="Image">

            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="3"
                        Direction="0"
                        RenderingBias="Quality"
                        ShadowDepth="0" />
                </Setter.Value>
            </Setter>
            <Setter Property="UIElement.RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="UIElement.RenderTransform">
                <Setter.Value>
                    <ScaleTransform />
                </Setter.Value>
            </Setter>
            <Setter Property="FrameworkElement.LayoutTransform">
                <Setter.Value>
                    <ScaleTransform x:Name="transform" />
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <EventTrigger RoutedEvent="UIElement.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="RenderTransform.ScaleX"
                                To="1.03"
                                Duration="0:0:.1" />
                            <DoubleAnimation
                                Storyboard.TargetProperty="RenderTransform.ScaleY"
                                To="1.03"
                                Duration="0:0:.1" />
                            <DoubleAnimation
                                Storyboard.TargetProperty="(Effect).BlurRadius"
                                To="15"
                                Duration="0:0:0.6">
                                <DoubleAnimation.EasingFunction>
                                    <PowerEase EasingMode="EaseOut" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="UIElement.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="(Effect).BlurRadius"
                                To="3"
                                Duration="0:0:0.7">
                                <DoubleAnimation.EasingFunction>
                                    <PowerEase EasingMode="EaseOut" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation
                                Storyboard.TargetProperty="RenderTransform.ScaleX"
                                To="1"
                                Duration="0:0:.1" />
                            <DoubleAnimation
                                Storyboard.TargetProperty="RenderTransform.ScaleY"
                                To="1"
                                Duration="0:0:.1" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Controls:MetroWindow.Resources>
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands
            VerticalContentAlignment="Center"
            ShowLastSeparator="False"
            ShowSeparators="False">
            <Ellipse
                x:Name="eInternet"
                Width="9"
                Height="9"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Fill="{Binding Internet}"
                Stroke="Black"
                StrokeThickness="0">
                <Ellipse.ToolTip>
                    <ToolTip Content="{Binding InternetHint}" />
                </Ellipse.ToolTip>
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    AutoReverse="True"
                                    RepeatBehavior="Forever"
                                    Storyboard.TargetProperty="(Effect).BlurRadius"
                                    From="3"
                                    To="10"
                                    Duration="0:0:1">
                                    <DoubleAnimation.EasingFunction>
                                        <PowerEase EasingMode="EaseOut" />
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>

                </Ellipse.Triggers>

                <Ellipse.Effect>
                    <DropShadowEffect
                        BlurRadius="3"
                        Direction="0"
                        ShadowDepth="0" />
                </Ellipse.Effect>
            </Ellipse>
            <Ellipse
                x:Name="eESO"
                Width="9"
                Height="9"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Fill="{Binding ESO}"
                Stroke="Black"
                StrokeThickness="0">
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    AutoReverse="True"
                                    RepeatBehavior="Forever"
                                    Storyboard.TargetProperty="(Effect).BlurRadius"
                                    From="3"
                                    To="10"
                                    Duration="0:0:1">
                                    <DoubleAnimation.EasingFunction>
                                        <PowerEase EasingMode="EaseOut" />
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>

                </Ellipse.Triggers>

                <Ellipse.Effect>
                    <DropShadowEffect
                        BlurRadius="3"
                        Direction="0"
                        ShadowDepth="0" />
                </Ellipse.Effect>
                <Ellipse.ToolTip>
                    <ToolTip Content="{Binding ESOHint}" />
                </Ellipse.ToolTip>
            </Ellipse>
            <Ellipse
                x:Name="eESOC"
                Width="9"
                Height="9"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Fill="{Binding ESOC}"
                Stroke="Black"
                StrokeThickness="0">
                <Ellipse.ToolTip>
                    <ToolTip
                        Content="{Binding ESOCList}"
                        FontFamily="Courier New"
                        FontSize="11" />
                </Ellipse.ToolTip>
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    AutoReverse="True"
                                    RepeatBehavior="Forever"
                                    Storyboard.TargetProperty="(Effect).BlurRadius"
                                    From="3"
                                    To="10"
                                    Duration="0:0:1">
                                    <DoubleAnimation.EasingFunction>
                                        <PowerEase EasingMode="EaseOut" />
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>

                </Ellipse.Triggers>

                <Ellipse.Effect>
                    <DropShadowEffect
                        BlurRadius="3"
                        Direction="0"
                        ShadowDepth="0" />
                </Ellipse.Effect>
            </Ellipse>
            <TextBlock Padding="8,0,2,0" Text="{Binding ESOPop}" />
            <TextBlock Padding="0,0,2,0" Text="{Binding TADPop}" />
            <TextBlock Text="{Binding NillaPop}" />
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>
    <Border BorderThickness="8,0,8,5">
        <Grid VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="{Binding TwitchVisibility, TargetNullValue='0'}" />
            </Grid.ColumnDefinitions>
            <Border>

                <Grid
                    Grid.Row="0"
                    Grid.Column="0"
                    Height="Auto"
                    VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Menu Grid.Row="0" Grid.Column="0">
                        <MenuItem Header="Settings">
                            <MenuItem Click="MenuItem_Click" Header="Clear Stored Data" />
                            <MenuItem Header="Friends" SubmenuOpened="MenuItem_SubmenuOpened_1">
                                <MenuItem
                                    Checked="MenuItem_Checked"
                                    Header="Show Last login"
                                    IsCheckable="True"
                                    IsChecked="{Binding LastLoginEnabled}"
                                    Unchecked="MenuItem_Unchecked" />
                                <MenuItem
                                    Checked="MenuItem_Checked_1"
                                    Header="Show Clan"
                                    IsCheckable="True"
                                    IsChecked="{Binding ClanEnabled}"
                                    Unchecked="MenuItem_Unchecked_1" />
                                <MenuItem
                                    Checked="MenuItem_Checked_2"
                                    Header="Show PR Supremacy"
                                    IsCheckable="True"
                                    IsChecked="{Binding SPEnabled}"
                                    Unchecked="MenuItem_Unchecked_2" />
                                <MenuItem
                                    Checked="MenuItem_Checked_3"
                                    Header="Show PR Treaty"
                                    IsCheckable="True"
                                    IsChecked="{Binding TREnabled}"
                                    Unchecked="MenuItem_Unchecked_3" />
                                <MenuItem
                                    Checked="MenuItem_Checked_4"
                                    Header="Show PR Deathmatch"
                                    IsCheckable="True"
                                    IsChecked="{Binding DMEnabled}"
                                    Unchecked="MenuItem_Unchecked_4" />
                                <MenuItem
                                    Checked="MenuItem_Checked_5"
                                    Header="Show PR Supremacy nilla"
                                    IsCheckable="True"
                                    IsChecked="{Binding SPnEnabled}"
                                    Unchecked="MenuItem_Unchecked_5" />
                                <MenuItem
                                    Checked="MenuItem_Checked_6"
                                    Header="Show PR Deathmatch nilla"
                                    IsCheckable="True"
                                    IsChecked="{Binding DMnEnabed}"
                                    Unchecked="MenuItem_Unchecked_6" />
                            </MenuItem>
                            <MenuItem Click="MenuItem_Click_1" Header="Open BackUps" />
                        </MenuItem>
                        <MenuItem Header="Tools">
                            <MenuItem
                                Checked="CheckBox_Checked"
                                Header="Twitch Streams"
                                IsCheckable="True"
                                Unchecked="CheckBox_Unchecked" />
                            <MenuItem Header="Error 101 fix" SubmenuOpened="MenuItem_SubmenuOpened">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Label
                                        Grid.Row="0"
                                        Background="{Binding KeyColor}"
                                        Content="{Binding Key}" />
                                    <TextBox
                                        Grid.Row="1"
                                        Width="150"
                                        AcceptsReturn="True"
                                        IsReadOnly="True"
                                        Text="Click &quot;Fix&quot; to modify the affected registry values.&#10;Restart Age of Empires III without any expansions and enter your CD key when prompted.&#10;Proceed to create your ESO account."
                                        TextWrapping="Wrap"
                                        VerticalScrollBarVisibility="Auto" />
                                    <Button
                                        Grid.Row="2"
                                        Click="Button_Click_5"
                                        Content="Fix"
                                        IsEnabled="{Binding KeyEnabled}" />
                                </Grid>
                            </MenuItem>
                        </MenuItem>
                    </Menu>
                    <Menu
                        Grid.Row="0"
                        Grid.Column="1"
                        VerticalContentAlignment="Stretch">
                        <Image
                            Grid.Row="0"
                            Grid.Column="3"
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Right"
                            Cursor="Hand"
                            Source="Launcher/checker.png"
                            Style="{StaticResource ImageStyle}"
                            ToolTip="IP Checker" />


                        <Image
                            Grid.Row="0"
                            Grid.Column="3"
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Right"
                            Cursor="Hand"
                            Source="Launcher/calc.png"
                            Style="{StaticResource ImageStyle}"
                            ToolTip="Economic Calculator" />
                        <Image
                            Grid.Row="0"
                            Grid.Column="3"
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Right"
                            Cursor="Hand"
                            Source="Launcher/rss.png"
                            Style="{StaticResource ImageStyle}"
                            ToolTip="ESOC Feeds" />
                        <Image
                            Grid.Row="0"
                            Grid.Column="3"
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Right"
                            Cursor="Hand"
                            Source="Launcher/friends.png"
                            Style="{StaticResource ImageStyle}"
                            ToolTip="Friends Widget" />
                        <Image
                            Grid.Row="0"
                            Grid.Column="3"
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Right"
                            Cursor="Hand"
                            Source="Launcher/gymxp.png"
                            Style="{StaticResource ImageStyle}"
                            ToolTip="Gym XP" />

                    </Menu>
                </Grid>
            </Border>
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Menu
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    VerticalContentAlignment="Stretch">
                    <Image
                        Grid.Row="0"
                        Grid.Column="3"
                        Width="20"
                        Height="20"
                        HorizontalAlignment="Right"
                        Cursor="Hand"
                        MouseDown="Image_MouseDown_1"
                        Source="Launcher/age3.png"
                        Style="{StaticResource ImageStyle}"
                        ToolTip="Age of Empires III" />
                    <Image
                        Grid.Row="1"
                        Grid.Column="3"
                        Width="20"
                        Height="20"
                        HorizontalAlignment="Right"
                        Cursor="Hand"
                        MouseDown="Image_MouseDown_2"
                        Source="Launcher/age3y.png"
                        Style="{StaticResource ImageStyle}"
                        ToolTip="Age of Empires III: The Asian Dynasties" />
                    <Image
                        Grid.Row="1"
                        Grid.Column="3"
                        Width="20"
                        Height="20"
                        HorizontalAlignment="Right"
                        Cursor="Hand"
                        MouseDown="Image_MouseDown_3"
                        Source="Launcher/age3p.png"
                        Style="{StaticResource ImageStyle}"
                        ToolTip="Age of Empires III: ESOC Patch" />
                    <Image
                        Grid.Row="1"
                        Grid.Column="3"
                        Width="20"
                        Height="20"
                        HorizontalAlignment="Right"
                        Cursor="Hand"
                        MouseDown="Image_MouseDown"
                        Source="Launcher/age3t.png"
                        Style="{StaticResource ImageStyle}"
                        ToolTip="Age of Empires III: Treaty Patch" />
                </Menu>
            </Grid>
            <Grid
                Grid.Row="1"
                Grid.Column="0"
                Height="Auto"
                VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Border
                    Grid.Row="0"
                    Grid.Column="0"
                    BorderThickness="0,0,3,3">
                    <TextBox
                        x:Name="tbESO"
                        Width="Auto"
                        Height="23"
                        KeyDown="tbESO_KeyDown"
                        Text=""
                        TextChanged="tbESO_TextChanged"
                        TextWrapping="Wrap">
                        <TextBox.ToolTip>
                            <ToolTip Content="{Binding Cheater}" />
                        </TextBox.ToolTip>
                    </TextBox>
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="0"
                    BorderThickness="0,0,3,0">
                    <ComboBox
                        x:Name="cbMode"
                        Width="Auto"
                        IsEnabled="False"
                        IsSynchronizedWithCurrentItem="True"
                        SelectedIndex="0"
                        SelectionChanged="ComboBox_SelectionChanged">
                        <ComboBoxItem Content="Supremacy" />
                        <ComboBoxItem Content="Treaty" />
                        <ComboBoxItem Content="Deathmatch" />
                        <ComboBoxItem Content="Supremacy nilla" />
                        <ComboBoxItem Content="Deathmatch nilla" />
                    </ComboBox>
                </Border>
                <Border
                    Grid.Row="0"
                    Grid.Column="1"
                    BorderThickness="0,0,0,3">
                    <Button
                        x:Name="bGet"
                        Width="53"
                        Click="Button_Click"
                        Content="Get"
                        IsEnabled="False" />
                </Border>
                <Border
                    Grid.Row="0"
                    Grid.Column="2"
                    BorderThickness="3,0,3,3">
                    <Button
                        x:Name="bDetail"
                        Width="53"
                        Click="Button_Click_2"
                        Content="Detail"
                        IsEnabled="False" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    BorderThickness="0,0,3,0">
                    <ComboBox
                        x:Name="cbType"
                        IsEnabled="False"
                        IsSynchronizedWithCurrentItem="True"
                        SelectedIndex="2"
                        SelectionChanged="ComboBox_SelectionChanged">
                        <ComboBoxItem Content="1 vs 1" />
                        <ComboBoxItem Content="Team" />
                        <ComboBoxItem Content="Overall" />
                    </ComboBox>
                </Border>

            </Grid>
            <Grid
                Grid.Row="2"
                Grid.Column="0"
                VerticalAlignment="Top"
                common:VisibilityAnimation.AnimationType="{Binding AType}"
                Visibility="{Binding AllVisible}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Padding="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Right"
                    Content="{Binding Elapsed}"
                    FontSize="10" />
                <StackPanel
                    Grid.Row="1"
                    Grid.RowSpan="4"
                    Grid.Column="0">
                    <StackPanel.Effect>
                        <DropShadowEffect
                            BlurRadius="16"
                            Direction="0"
                            ShadowDepth="0"
                            Color="{Binding Online}" />
                    </StackPanel.Effect>

                    <Image
                        Width="55"
                        Height="55"
                        Cursor="Help"
                        Source="{Binding Avatar}"
                        Style="{StaticResource ImageStyle}">
                        <Image.ToolTip>
                            <StackPanel>
                                <TextBlock Text="{Binding Info}" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <CircularGauge:CircularGaugeControl
                                        x:Name="gPT"
                                        Grid.Column="0"
                                        HorizontalAlignment="Left"
                                        BelowOptimalRangeColor="LimeGreen"
                                        Content=""
                                        CurrentValue="{Binding PT}"
                                        DialBorderThickness="0"
                                        GaugeBackgroundColor="#000D0E0C"
                                        MajorDivisionsCount="1"
                                        MajorTickColor="#FF383636"
                                        MinorDivisionsCount="20"
                                        MinorTickColor="#FF0C0B0B"
                                        OptimalRangeColor="#FFEAE128"
                                        OptimalRangeEndValue="95"
                                        OptimalRangeStartValue="70"
                                        PointerCapRadius="0"
                                        PointerLength="25"
                                        PointerThickness="2"
                                        Radius="35"
                                        RangeIndicatorRadius="23"
                                        ScaleLabelForeground="#00191717"
                                        ScaleLabelRadius="0"
                                        ScaleRadius="35"
                                        ScaleStartAngle="150"
                                        ScaleSweepAngle="240"
                                        ScaleValuePrecision="5" />

                                    <TextBlock Grid.Column="1">
                                        <Run FontWeight="Bold" Text="{Binding PTStatus}" />
                                        <Run Text="{Binding PTInfo}" />
                                    </TextBlock>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <CircularGauge:CircularGaugeControl
                                        x:Name="gNB"
                                        Padding="0,10,0,0"
                                        HorizontalAlignment="Left"
                                        BelowOptimalRangeColor="LimeGreen"
                                        Content=""
                                        CurrentValue="{Binding NB}"
                                        DialBorderThickness="0"
                                        GaugeBackgroundColor="#000D0E0C"
                                        MajorDivisionsCount="1"
                                        MajorTickColor="#FF383636"
                                        MinorDivisionsCount="20"
                                        MinorTickColor="#FF0C0B0B"
                                        OptimalRangeColor="#FFEAE128"
                                        OptimalRangeEndValue="95"
                                        OptimalRangeStartValue="70"
                                        PointerCapRadius="0"
                                        PointerLength="25"
                                        PointerThickness="2"
                                        Radius="35"
                                        RangeIndicatorRadius="23"
                                        ScaleLabelForeground="#00191717"
                                        ScaleLabelRadius="0"
                                        ScaleRadius="35"
                                        ScaleStartAngle="150"
                                        ScaleSweepAngle="240"
                                        ScaleValuePrecision="5" />
                                    <TextBlock Grid.Column="1">
                                        <Run FontWeight="Bold" Text="{Binding NBStatus}" />
                                        <Run Text="{Binding NBInfo}" />
                                    </TextBlock>
                                </Grid>

                            </StackPanel>


                        </Image.ToolTip>

                    </Image>
                </StackPanel>
                <Popup
                    x:Name="pCheatCheck"
                    Placement="Right"
                    PlacementTarget="{Binding ElementName=iCheatCheck}"
                    PopupAnimation="Fade">
                    <Border
                        Padding="10"
                        Background="White"
                        BorderBrush="#FFCCCCCC"
                        BorderThickness="1">
                        <Grid>

                            <Grid.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="Padding" Value="5,0,40,5" />
                                </Style>
                            </Grid.Resources>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Border Grid.Row="0" Grid.Column="0">
                                <Label Content="TAD - Supremacy" />
                            </Border>
                            <Border Grid.Row="0" Grid.Column="1">
                                <Label
                                    HorizontalAlignment="Right"
                                    HorizontalContentAlignment="Right"
                                    Background="{Binding CheatColorSP}"
                                    Content="{Binding CheatMsgSP}">
                                    <Label.ToolTip>
                                        <ToolTip
                                            Content="{Binding CheatUnitsSP}"
                                            FontFamily="Courier New"
                                            FontSize="11" />
                                    </Label.ToolTip>
                                </Label>
                            </Border>
                            <Border Grid.Row="1" Grid.Column="0">
                                <Label Content="TAD - Treaty" />
                            </Border>
                            <Border Grid.Row="1" Grid.Column="1">
                                <Label
                                    HorizontalAlignment="Right"
                                    HorizontalContentAlignment="Right"
                                    Background="{Binding CheatColorTR}"
                                    Content="{Binding CheatMsgTR}">
                                    <Label.ToolTip>
                                        <ToolTip
                                            Content="{Binding CheatUnitsTR}"
                                            FontFamily="Courier New"
                                            FontSize="11" />
                                    </Label.ToolTip>
                                </Label>
                            </Border>
                            <Border Grid.Row="2" Grid.Column="0">
                                <Label Content="TAD - Deathmatch" />
                            </Border>
                            <Border Grid.Row="2" Grid.Column="1">
                                <Label
                                    HorizontalAlignment="Right"
                                    HorizontalContentAlignment="Right"
                                    Background="{Binding CheatColorDM}"
                                    Content="{Binding CheatMsgDM}">
                                    <Label.ToolTip>
                                        <ToolTip
                                            Content="{Binding CheatUnitsDM}"
                                            FontFamily="Courier New"
                                            FontSize="11" />
                                    </Label.ToolTip>
                                </Label>
                            </Border>
                            <Border Grid.Row="3" Grid.Column="0">
                                <Label Content="Nilla - Supremacy" />
                            </Border>
                            <Border Grid.Row="3" Grid.Column="1">
                                <Label
                                    HorizontalAlignment="Right"
                                    HorizontalContentAlignment="Right"
                                    Background="{Binding CheatColorSPn}"
                                    Content="{Binding CheatMsgSPn}">
                                    <Label.ToolTip>
                                        <ToolTip
                                            Content="{Binding CheatUnitsSPn}"
                                            FontFamily="Courier New"
                                            FontSize="11" />
                                    </Label.ToolTip>
                                </Label>
                            </Border>
                            <Border Grid.Row="4" Grid.Column="0">
                                <Label Content="Nilla - Deathmatch" />
                            </Border>
                            <Border Grid.Row="4" Grid.Column="1">
                                <Label
                                    HorizontalAlignment="Right"
                                    HorizontalContentAlignment="Right"
                                    Background="{Binding CheatColorDMn}"
                                    Content="{Binding CheatMsgDMn}">
                                    <Label.ToolTip>
                                        <ToolTip
                                            Content="{Binding CheatUnitsDMn}"
                                            FontFamily="Courier New"
                                            FontSize="11" />
                                    </Label.ToolTip>
                                </Label>
                            </Border>
                        </Grid>
                    </Border>
                </Popup>
                <Border
                    Grid.Row="1"
                    Grid.RowSpan="4"
                    Grid.Column="1"
                    BorderThickness="3,0,0,3">
                    <Image
                        x:Name="iCheatCheck"
                        Width="32"
                        Height="32"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Cursor="Hand"
                        MouseLeftButtonDown="Image_MouseLeftButtonDown_6"
                        Source="{Binding iCheat}"
                        Style="{StaticResource ImageStyle}"
                        ToolTip="Show Cheat Checker" />


                </Border>
