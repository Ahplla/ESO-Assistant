                            Padding="10"
                            Background="White"
                            BorderBrush="#FFCCCCCC"
                            BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Button
                                    Grid.Row="0"
                                    Click="MenuItem_Click_2"
                                    Content="Go to jpcommunity ELO" />
                                <Grid Grid.Row="1">
