                                        Grid.Row="3"
                                        Grid.Column="0"
                                        HorizontalContentAlignment="Center"
                                        Content="Team 1" />
                                    <Label
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        HorizontalContentAlignment="Center"
                                        Content="Team 2" />

