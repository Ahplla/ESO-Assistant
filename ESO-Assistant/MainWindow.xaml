                </Grid>
                <Grid
                    Grid.Row="4"
                    Grid.Column="0"
                    common:VisibilityAnimation.AnimationType="{Binding AType}"
                    Visibility="{Binding AllVisible}">
                    <Label
                        Width="Auto"
                        Padding="5,0,5,5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Stretch"
                        Content="{Binding Rank}"
                        FontSize="20" />
                </Grid>
                <Grid
                    Grid.Row="4"
                    Grid.Column="1"
                    Grid.ColumnSpan="2">
                    <Border Padding="0,3,3,3">
                        <Label
                            Name="lAbout"
                            Padding="0"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Right"
                            VerticalContentAlignment="Center"
                            Content="© 2015-2017 XaKO"
                            Cursor="Hand"
                            FontFamily="Comic Sans MS"
                            FontSize="14"
                            MouseLeftButtonDown="lAbout_MouseLeftButtonDown">
                            <Label.Foreground>
                                <RadialGradientBrush>
                                    <GradientStop Offset="0" Color="Orange" />
                                    <GradientStop Offset="1" Color="Gold" />
                                </RadialGradientBrush>
                            </Label.Foreground>


                            <Label.Effect>
                                <DropShadowEffect
                                    BlurRadius="3"
                                    Direction="0"
                                    ShadowDepth="0" />
                            </Label.Effect>
                        </Label>
                    </Border>
                    <Popup
                        x:Name="pAbout"
                        Placement="Bottom"
                        PlacementTarget="{Binding ElementName=lAbout}"
                        PopupAnimation="Fade"
                        StaysOpen="False">
                        <Border
                            Padding="10"
                            Background="White"
                            BorderBrush="#FFCCCCCC"
                            BorderThickness="1">
                            <Grid>
                                <Grid.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="Padding" Value="5,5,5,5" />
                                    </Style>
                                </Grid.Resources>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Label
                                    Grid.Row="0"
                                    Grid.ColumnSpan="6"
                                    Content="Contact me:"
                                    FontSize="16" />
                                <Border Grid.Row="1" Grid.Column="0">
                                    <Image
                                        Width="48"
                                        Height="48"
                                        MouseLeftButtonDown="Image_MouseLeftButtonDown_2"
                                        Source="Social/VK.png"
                                        Style="{StaticResource ImageStyle}"
                                        ToolTip="VK" />
                                </Border>
                                <Border Grid.Row="1" Grid.Column="1">
                                    <Image
                                        Width="48"
                                        Height="48"
                                        Source="Social/Email.png"
                                        Style="{StaticResource ImageStyle}"
                                        ToolTip="GMail: xakops@gmail.com" />
                                </Border>
                                <Border Grid.Row="1" Grid.Column="2">
                                    <Image
                                        Width="48"
                                        Height="48"
                                        MouseLeftButtonDown="Image_MouseLeftButtonDown_3"
                                        Source="Social/Github.png"
                                        Style="{StaticResource ImageStyle}"
                                        ToolTip="Github" />
                                </Border>
                                <Border Grid.Row="1" Grid.Column="3">
                                    <Image
                                        Width="48"
                                        Height="48"
                                        MouseLeftButtonDown="Image_MouseLeftButtonDown_4"
                                        Source="Social/Twitch.png"
                                        Style="{StaticResource ImageStyle}"
                                        ToolTip="Twitch" />
                                </Border>
                                <Border Grid.Row="1" Grid.Column="4">
                                    <Image
                                        Width="48"
                                        Height="48"
                                        MouseLeftButtonDown="Image_MouseLeftButtonDown_5"
                                        Source="Social/YouTube.png"
                                        Style="{StaticResource ImageStyle}"
                                        ToolTip="YouTube" />
                                </Border>
                                <Border Grid.Row="1" Grid.Column="5">
                                    <Image
                                        Width="48"
                                        Height="48"
                                        Source="Social/Discord.png"
                                        Style="{StaticResource ImageStyle}"
                                        ToolTip="Discord: XaKOps/BlackBritish" />
                                </Border>
                                <Label
                                    Grid.Row="2"
                                    Grid.ColumnSpan="6"
                                    HorizontalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    Content="© 2015-2017 XaKO, Russia"
                                    FontSize="14" />
                            </Grid>

                        </Border>
                    </Popup>

                </Grid>
                <Grid
                    x:Name="iProgress"
                    Grid.Row="1"
                    Grid.RowSpan="3"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    common:VisibilityAnimation.AnimationType="{Binding AType}"
                    Visibility="Hidden">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Image
                        Grid.Row="0"
                        Width="250"
                        gif:ImageBehavior.AnimatedSource="Icons/Animation.gif" />
                    <Label
                        Grid.Row="1"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        Content="{Binding Progress}"
                        FontSize="16">
                        <Label.Effect>
                            <DropShadowEffect
                                BlurRadius="3"
                                Direction="0"
                                ShadowDepth="0" />
                        </Label.Effect>
                        <Label.Foreground>
                            <RadialGradientBrush>
                                <GradientStop Offset="0.167" Color="#FF0B2270" />
                                <GradientStop Offset="0.63" Color="#FF0F3FE4" />
                            </RadialGradientBrush>
                        </Label.Foreground>
                    </Label>
                </Grid>
                <Grid
                    Grid.Row="0"
                    Grid.RowSpan="4"
                    Grid.Column="2">
                    <Border Padding="0,3,0,0">
                        <TreeView
                            x:Name="treeView1"
                            Width="210"
                            Height="270"
                            VerticalAlignment="Top"
                            BorderBrush="#FFCCCCCC"
                            BorderThickness="1"
                            TreeViewItem.Selected="TreeViewItem_OnItemSelected">
                            <TreeView.Resources>
                                <HierarchicalDataTemplate DataType="{x:Type self:Game}" ItemsSource="{Binding Streams}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" Padding="2">
                                            <Image
                                                Height="22"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Center"
                                                Source="{Binding Icon}"
                                                Style="{StaticResource ImageStyle}" />
                                        </Border>
                                        <Label Grid.Column="1" Content="{Binding Name}" />
                                        <StackPanel
                                            Grid.Column="2"
                                            HorizontalAlignment="Right"
                                            Orientation="Horizontal">


                                            <Label Content=" [" Foreground="Maroon" />
                                            <Label
                                                Padding="0"
                                                HorizontalAlignment="Right"
                                                HorizontalContentAlignment="Right"
                                                VerticalContentAlignment="Center"
                                                Content="{Binding Streams.Count}"
                                                Foreground="Maroon" />
                                            <Label Content="]" Foreground="Maroon" />
                                        </StackPanel>
                                    </Grid>

                                </HierarchicalDataTemplate>
                                <DataTemplate DataType="{x:Type self:TreeItem}">

                                    <Grid ToolTip="{Binding Hint}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Image
                                            Grid.Column="0"
                                            Height="20"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center"
                                            Source="Icons/live.png" />
                                        <Label
                                            Grid.Column="1"
                                            HorizontalContentAlignment="Left"
                                            VerticalContentAlignment="Center"
                                            Content="{Binding Name}" />
                                        <Label
                                            Grid.Column="2"
                                            HorizontalAlignment="Right"
                                            HorizontalContentAlignment="Right"
                                            VerticalContentAlignment="Center"
                                            Content="{Binding Viewers}" />
                                    </Grid>
                                </DataTemplate>
                            </TreeView.Resources>
                        </TreeView>
                    </Border>
                </Grid>
                <ToggleButton x:Name="tbHam" Visibility="Hidden">
                    <ToggleButton.Triggers>
                        <EventTrigger RoutedEvent="ToggleButton.Checked">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetName="hMenu"
                                        Storyboard.TargetProperty="Width"
                                        From="48"
                                        To="200"
                                        Duration="0:0:.7" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetName="hMenu"
                                        Storyboard.TargetProperty="Width"
                                        From="200"
                                        To="48"
                                        Duration="0:0:.7" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ToggleButton.Triggers>
                </ToggleButton>
            </Grid>
        </Grid>
    </Border>
</Controls:MetroWindow>
