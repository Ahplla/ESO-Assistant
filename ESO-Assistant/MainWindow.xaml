                    <Label.Effect>
                        <DropShadowEffect
                            BlurRadius="3"
                            Direction="0"
                            ShadowDepth="0" />
                    </Label.Effect>
                </Label>
                <Popup
                    x:Name="pAbout"
                    Placement="Bottom"
                    PlacementTarget="{Binding ElementName=lAbout}"
