                    <RadialGradientBrush>
                        <GradientStop Offset="0.43" Color="Indigo" />
                        <GradientStop Offset="1" Color="#FF131313" />
                    </RadialGradientBrush>
                </Label.Foreground>
            </Label>
        </Grid>
    </Border>
