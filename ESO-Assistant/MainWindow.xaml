<Controls:MetroWindow
    x:Class="ESO_Assistant.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CircularGauge="clr-namespace:CircularGauge;assembly=CircularGauge"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:common="clr-namespace:WPF.Common"
    xmlns:gif="http://wpfanimatedgif.codeplex.com"
    xmlns:self="clr-namespace:ESO_Assistant.Classes"
    Title="ESO-Assistant − version 5.0"
    Width="Auto"
    Height="Auto"
    VerticalAlignment="Top"
    VerticalContentAlignment="Top"
    AllowsTransparency="True"
    BorderBrush="{DynamicResource AccentColorBrush}"
    BorderThickness="2"
    Closing="MetroWindow_Closing"
    ContentRendered="MetroWindow_ContentRendered"
    IsMaxRestoreButtonEnabled="False"
    ResizeMode="CanMinimize"
    ShowIconOnTitleBar="False"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen">
    <Controls:MetroWindow.Resources>

        <Style x:Key="ImageStyle" TargetType="Image">

            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="3"
                        Direction="0"
                        RenderingBias="Quality"
                        ShadowDepth="0" />
                </Setter.Value>
            </Setter>
            <Setter Property="UIElement.RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="UIElement.RenderTransform">
                <Setter.Value>
                    <ScaleTransform />
                </Setter.Value>
            </Setter>
            <Setter Property="FrameworkElement.LayoutTransform">
                <Setter.Value>
                    <ScaleTransform x:Name="transform" />
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <EventTrigger RoutedEvent="UIElement.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="RenderTransform.ScaleX"
                                To="1.03"
                                Duration="0:0:.1" />
                            <DoubleAnimation
                                Storyboard.TargetProperty="RenderTransform.ScaleY"
                                To="1.03"
                                Duration="0:0:.1" />
                            <DoubleAnimation
                                Storyboard.TargetProperty="(Effect).BlurRadius"
                                To="15"
                                Duration="0:0:0.6">
                                <DoubleAnimation.EasingFunction>
                                    <PowerEase EasingMode="EaseOut" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="UIElement.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="(Effect).BlurRadius"
                                To="3"
                                Duration="0:0:0.7">
                                <DoubleAnimation.EasingFunction>
                                    <PowerEase EasingMode="EaseOut" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation
                                Storyboard.TargetProperty="RenderTransform.ScaleX"
                                To="1"
                                Duration="0:0:.1" />
                            <DoubleAnimation
                                Storyboard.TargetProperty="RenderTransform.ScaleY"
                                To="1"
                                Duration="0:0:.1" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Controls:MetroWindow.Resources>
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands
            VerticalContentAlignment="Center"
            ShowLastSeparator="False"
            ShowSeparators="False">
            <Border Padding="8,0,0,0">
                <Ellipse
                    x:Name="eInternet"
                    Width="9"
                    Height="9"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Fill="{Binding Internet}"
                    Stroke="Black"
                    StrokeThickness="0">
                    <Ellipse.ToolTip>
                        <ToolTip Content="{Binding InternetHint}" />
                    </Ellipse.ToolTip>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        AutoReverse="True"
                                        RepeatBehavior="Forever"
                                        Storyboard.TargetProperty="(Effect).BlurRadius"
                                        From="3"
                                        To="10"
                                        Duration="0:0:1">
                                        <DoubleAnimation.EasingFunction>
                                            <PowerEase EasingMode="EaseOut" />
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                    </Ellipse.Triggers>

                    <Ellipse.Effect>
                        <DropShadowEffect
                            BlurRadius="3"
                            Direction="0"
                            ShadowDepth="0" />
                    </Ellipse.Effect>
                </Ellipse>
            </Border>
            <Ellipse
                x:Name="eESO"
                Width="9"
                Height="9"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Fill="{Binding ESO}"
                Stroke="Black"
                StrokeThickness="0">
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    AutoReverse="True"
                                    RepeatBehavior="Forever"
                                    Storyboard.TargetProperty="(Effect).BlurRadius"
                                    From="3"
                                    To="10"
                                    Duration="0:0:1">
                                    <DoubleAnimation.EasingFunction>
                                        <PowerEase EasingMode="EaseOut" />
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>

                </Ellipse.Triggers>

                <Ellipse.Effect>
                    <DropShadowEffect
                        BlurRadius="3"
                        Direction="0"
                        ShadowDepth="0" />
                </Ellipse.Effect>
                <Ellipse.ToolTip>
                    <ToolTip Content="{Binding ESOHint}" />
                </Ellipse.ToolTip>
            </Ellipse>
            <Ellipse
                x:Name="eESOC"
                Width="9"
                Height="9"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Fill="{Binding ESOC}"
                Stroke="Black"
                StrokeThickness="0">
                <Ellipse.ToolTip>
                    <ToolTip
                        Content="{Binding ESOCList}"
                        FontFamily="Courier New"
                        FontSize="11" />
                </Ellipse.ToolTip>
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    AutoReverse="True"
                                    RepeatBehavior="Forever"
                                    Storyboard.TargetProperty="(Effect).BlurRadius"
                                    From="3"
                                    To="10"
                                    Duration="0:0:1">
                                    <DoubleAnimation.EasingFunction>
                                        <PowerEase EasingMode="EaseOut" />
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>

                </Ellipse.Triggers>

                <Ellipse.Effect>
                    <DropShadowEffect
                        BlurRadius="3"
                        Direction="0"
                        ShadowDepth="0" />
                </Ellipse.Effect>
            </Ellipse>
            <TextBlock Padding="8,0,2,0" Text="{Binding ESOPop}" />
            <TextBlock Padding="0,0,2,0" Text="{Binding TADPop}" />
            <TextBlock Text="{Binding NillaPop}" />
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>
    <Border BorderThickness="0,0,5,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Padding="0,0,4,0">
                <Menu
                    x:Name="hMenu"
                    Width="48"
                    Background="#FF83919F"
                    BorderBrush="{DynamicResource AccentColorBrush}"
                    BorderThickness="0,0,2,0">
                    <MenuItem
                        Width="{Binding Width, ElementName=hMenu}"
                        Height="48"
                        Padding="0,3"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        IsCheckable="False">

                        <MenuItem.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48" />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image
                                    Grid.Column="0"
                                    Height="32"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    MouseLeftButtonDown="Image_MouseLeftButtonDown_10"
                                    Source="Launcher/menu.png" />
                                <Image
                                    Grid.Column="1"
                                    Height="24"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    MouseDown="Image_MouseDown"
                                    Source="Launcher/age3.png"
                                    Style="{StaticResource ImageStyle}"
                                    ToolTip="Age of Empires III" />
                                <Image
                                    Grid.Column="2"
                                    Height="24"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    MouseDown="Image_MouseDown_1"
                                    Source="Launcher/age3y.png"
                                    Style="{StaticResource ImageStyle}"
                                    ToolTip="Age of Empires III: The Asian Dynasties" />
                                <Image
                                    Grid.Column="3"
                                    Height="24"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    MouseDown="Image_MouseDown_2"
                                    Source="Launcher/age3p.png"
                                    Style="{StaticResource ImageStyle}"
                                    ToolTip="Age of Empires III: ESOC Patch" />
                                <Image
                                    Grid.Column="4"
                                    Height="24"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    MouseDown="Image_MouseDown_3"
                                    Source="Launcher/age3t.png"
                                    Style="{StaticResource ImageStyle}"
                                    ToolTip="Age of Empires III: Treaty Patch" />
                            </Grid>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem
                        x:Name="miNotifications"
                        Width="{Binding Width, ElementName=hMenu}"
                        Height="32"
                        Padding="0,3"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="miNotifications_Click">
                        <MenuItem.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Controls:Badged
                                    Grid.Column="0"
                                    Margin="0,8,0,0"
                                    Padding="0,-6,0,0"
                                    HorizontalAlignment="Center"
                                    Badge="{Binding NotificationCount}"
                                    BadgeForeground="#FFEEEEEE">
                                    <Controls:Badged.BadgeBackground>
                                        <RadialGradientBrush>
                                            <GradientStop Offset="0" Color="#FF930707" />
                                            <GradientStop Offset="1" Color="#FFEA0E0E" />
                                        </RadialGradientBrush>
                                    </Controls:Badged.BadgeBackground>
                                    <Image
                                        Height="24"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Source="Launcher/message.png"
                                        ToolTip="Notifications" />
                                </Controls:Badged>
                                <TextBlock
                                    Grid.Column="1"
                                    Padding="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Text="Notifications" />
                            </Grid>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem
                        Width="{Binding Width, ElementName=hMenu}"
                        Height="32"
                        Padding="0,3"
                        Background="Transparent"
                        BorderBrush="Transparent">
                        <MenuItem.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image
                                    Grid.Column="0"
                                    Height="24"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Source="Launcher/settings.png"
                                    ToolTip="Settings" />
                                <TextBlock
                                    Grid.Column="1"
                                    Padding="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Text="Settings" />
                            </Grid>
                        </MenuItem.Header>
                        <MenuItem Click="MenuItem_Click" Header="Clear Stored Data" />
                        <MenuItem Header="Friends" SubmenuOpened="MenuItem_SubmenuOpened_1">
                            <MenuItem
                                Checked="MenuItem_Checked"
                                Header="Show Last login"
                                IsCheckable="True"
                                IsChecked="{Binding LastLoginEnabled}"
                                Unchecked="MenuItem_Unchecked" />
                            <MenuItem
                                Checked="MenuItem_Checked_1"
                                Header="Show Clan"
                                IsCheckable="True"
                                IsChecked="{Binding ClanEnabled}"
                                Unchecked="MenuItem_Unchecked_1" />
                            <MenuItem
                                Checked="MenuItem_Checked_2"
                                Header="Show PR Supremacy"
                                IsCheckable="True"
                                IsChecked="{Binding SPEnabled}"
                                Unchecked="MenuItem_Unchecked_2" />
                            <MenuItem
                                Checked="MenuItem_Checked_3"
                                Header="Show PR Treaty"
                                IsCheckable="True"
                                IsChecked="{Binding TREnabled}"
                                Unchecked="MenuItem_Unchecked_3" />
                            <MenuItem
                                Checked="MenuItem_Checked_4"
                                Header="Show PR Deathmatch"
                                IsCheckable="True"
                                IsChecked="{Binding DMEnabled}"
                                Unchecked="MenuItem_Unchecked_4" />
                            <MenuItem
                                Checked="MenuItem_Checked_5"
                                Header="Show PR Supremacy nilla"
                                IsCheckable="True"
                                IsChecked="{Binding SPnEnabled}"
                                Unchecked="MenuItem_Unchecked_5" />
                            <MenuItem
                                Checked="MenuItem_Checked_6"
                                Header="Show PR Deathmatch nilla"
                                IsCheckable="True"
                                IsChecked="{Binding DMnEnabed}"
                                Unchecked="MenuItem_Unchecked_6" />
                        </MenuItem>
                        <MenuItem Click="MenuItem_Click_1" Header="Open BackUps" />
                    </MenuItem>
                    <MenuItem
                        Width="{Binding Width, ElementName=hMenu}"
                        Height="32"
                        Padding="0,3"
                        Background="Transparent"
                        BorderBrush="Transparent">

                        <MenuItem
                            x:Name="miTwitchVisible"
                            Checked="CheckBox_Checked"
                            Header="Twitch Streams"
                            IsCheckable="True"
                            Unchecked="CheckBox_Unchecked" />


                        <MenuItem Header="Error 101 Fix" SubmenuOpened="MenuItem_SubmenuOpened">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Label
                                    Grid.Row="0"
                                    Background="{Binding KeyColor}"
                                    Content="{Binding Key}" />
                                <TextBox
                                    Grid.Row="1"
                                    Width="150"
                                    AcceptsReturn="True"
                                    IsReadOnly="True"
                                    Text="Click &quot;Fix&quot; to modify the affected registry values.&#10;Restart Age of Empires III without any expansions and enter your CD key when prompted.&#10;Proceed to create your ESO account."
                                    TextWrapping="Wrap"
                                    VerticalScrollBarVisibility="Auto" />
                                <Button
                                    Grid.Row="2"
                                    Click="Button_Click_5"
                                    Content="Fix"
                                    IsEnabled="{Binding KeyEnabled}" />
                            </Grid>
                        </MenuItem>
                        <MenuItem Header="User.cfg &amp; User.con" SubmenuOpened="MenuItem_SubmenuOpened_2">
                            <MenuItem
                                x:Name="miMsecs"
                                Checked="miMsecs_Checked"
                                Header="Timer With Millisecs"
                                IsCheckable="True"
                                Unchecked="miMsecs_Unchecked" />
                            <MenuItem
                                x:Name="miIntro"
                                Checked="miIntro_Checked"
                                Header="Skip Intro"
                                IsCheckable="True"
                                Unchecked="miIntro_Unchecked" />
                            <MenuItem
                                x:Name="miFPS"
                                Checked="miFPS_Checked"
                                Header="Show FPS"
                                IsCheckable="True"
                                Unchecked="miFPS_Unchecked" />
                            <MenuItem
                                x:Name="miRotator"
                                Checked="miRotator_Checked"
                                Header="Buildings Rotator"
                                IsCheckable="True"
                                Unchecked="miRotator_Unchecked" />
                            <MenuItem Header="Zoom">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Content="Max: " />
                                    <Controls:NumericUpDown
                                        x:Name="udMax"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        ValueChanged="udMax_ValueChanged" />

                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Content="Normal: " />
                                    <Controls:NumericUpDown
                                        x:Name="udNorm"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        ValueChanged="udNorm_ValueChanged" />

                                    <Label
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Content="Min: " />
                                    <Controls:NumericUpDown
                                        x:Name="udMin"
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        ValueChanged="udMin_ValueChanged" />
                                    <Button
                                        Grid.Row="3"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Click="Button_Click_6"
                                        Content="Default" />
                                </Grid>
                            </MenuItem>
                        </MenuItem>
                        <MenuItem.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image
                                    Grid.Column="0"
                                    Height="24"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Source="Launcher/tools.png"
                                    ToolTip="Tools" />
                                <TextBlock
                                    Grid.Column="1"
                                    Padding="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Text="Tools" />
                            </Grid>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem
                        Width="{Binding Width, ElementName=hMenu}"
                        Height="32"
                        Padding="0,3"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="MenuItem_Click_3">
                        <MenuItem.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image
                                    Grid.Column="0"
                                    Height="24"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Source="Launcher/checker.png"
                                    ToolTip="IP Checker" />
                                <TextBlock
                                    Grid.Column="1"
                                    Padding="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Text="IP Checker" />
                            </Grid>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem
                        Width="{Binding Width, ElementName=hMenu}"
                        Height="32"
                        Padding="0,3"
                        Background="Transparent"
                        BorderBrush="Transparent">
                        <MenuItem.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image
                                    Grid.Column="0"
                                    Height="24"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Source="Launcher/calc.png"
                                    ToolTip="Economic Calculator" />
                                <TextBlock
                                    Grid.Column="1"
                                    Padding="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Text="Economic Calculator" />
                            </Grid>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem
                        Width="{Binding Width, ElementName=hMenu}"
                        Height="32"
                        Padding="0,3"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="MenuItem_Click_4">
                        <MenuItem.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image
                                    Grid.Column="0"
                                    Height="24"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Source="Launcher/gymxp.png"
                                    ToolTip="Gym XP" />
                                <TextBlock
                                    Grid.Column="1"
                                    Padding="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Text="Gym XP" />
                            </Grid>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem
                        x:Name="miFeeds"
                        Width="{Binding Width, ElementName=hMenu}"
                        Height="32"
                        Padding="0,3"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="miFeeds_Click">
                        <MenuItem.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Image
                                    Grid.Column="0"
                                    Height="24"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Source="Launcher/rss.png"
                                    ToolTip="ESOC Feeds" />
                                <TextBlock
                                    Grid.Column="1"
                                    Padding="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Text="ESOC Feeds" />
                            </Grid>
                        </MenuItem.Header>
                    </MenuItem>

                </Menu>
            </Border>

            <Popup
                x:Name="pNotifications"
                Closed="pNotifications_Closed"
                Placement="Right"
                PlacementTarget="{Binding ElementName=miNotifications}"
                PopupAnimation="Fade"
                StaysOpen="False">
                <Border
                    Padding="3"
                    Background="White"
                    BorderBrush="#FFCCCCCC"
                    BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Content="Unread Notifications"
                            FontSize="16" />
                        <ListView
                            x:Name="lvNotifications"
                            Grid.Row="1"
                            Height="280"
                            Padding="0"
                            BorderBrush="#FFCCCCCC"
                            BorderThickness="1"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                            <ListView.View>
                                <GridView x:Name="dgNotification" AllowsColumnReorder="False">
                                    <GridView.ColumnHeaderContainerStyle>
                                        <Style>
                                            <Setter Property="UIElement.Visibility" Value="Collapsed" />
                                        </Style>
                                    </GridView.ColumnHeaderContainerStyle>
                                    <GridViewColumn>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border Padding="3">
                                                    <Border
                                                        Padding="3"
                                                        BorderBrush="#FFCCCCCC"
                                                        BorderThickness="1"
                                                        CornerRadius="5">
                                                        <Grid Width="Auto">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto" />
                                                                <RowDefinition Height="Auto" />
                                                                <RowDefinition Height="Auto" />
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>
                                                            <Border
                                                                Grid.Row="0"
                                                                Grid.RowSpan="3"
                                                                Grid.Column="0"
                                                                Padding="3,3,8,3">
                                                                <Image
                                                                    Height="32"
                                                                    Source="{Binding Icon}"
                                                                    Style="{StaticResource ImageStyle}" />
                                                            </Border>
                                                            <TextBlock
                                                                Grid.Row="0"
                                                                Grid.Column="1"
                                                                FontSize="14"
                                                                Text="{Binding Owner}" />
                                                            <TextBlock
                                                                Grid.Row="1"
                                                                Grid.Column="1"
                                                                FontWeight="Bold"
                                                                Text="{Binding Title}" />
                                                            <TextBlock
                                                                Grid.Row="2"
                                                                Grid.Column="1"
                                                                HorizontalAlignment="Right"
                                                                Text="{Binding Date}" />

                                                        </Grid>
                                                    </Border>
                                                </Border>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>

                        </ListView>
                    </Grid>
                </Border>
            </Popup>

            <Popup
                x:Name="pFeeds"
                Placement="Right"
                PlacementTarget="{Binding ElementName=miFeeds}"
                PopupAnimation="Fade"
                StaysOpen="False">

                <ListView
                    x:Name="lvFeeds"
                    Height="280"
                    Padding="0"
                    BorderBrush="#FFCCCCCC"
                    BorderThickness="1"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <ListView.View>
                        <GridView x:Name="dgFeeds" AllowsColumnReorder="False">
                            <GridView.ColumnHeaderContainerStyle>
                                <Style>
                                    <Setter Property="UIElement.Visibility" Value="Collapsed" />
                                </Style>
                            </GridView.ColumnHeaderContainerStyle>
                            <GridViewColumn>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border
                                            Padding="3"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="lvFeeds_MouseLeftButtonDown"
                                            Tag="{Binding Link}">
                                            <Border
                                                Padding="3"
                                                BorderBrush="#FFCCCCCC"
                                                BorderThickness="1"
                                                CornerRadius="5">
                                                <Grid ToolTip="{Binding Tip}">
                                                    <Grid.RowDefinitions>
